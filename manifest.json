{
  "manifest_version": 2,

  "name": "Valve devs in-game: CSGO",
  "description": "",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": [
    "alarms",
    "webRequest",
	"https://steamcommunity.com/*",
	"http://steamcommunity.com/*"
  ],

  "background": {
    "page": "background.html",
    "persistent": true
  },
  "web_accessible_resources": [
    "48.png"
  ]
}
